server {
    # Listen addresses (multiple allowed)
    listen 127.0.0.1:8080;
    listen 0.0.0.0:8081;

    # Default error pages
    error_page 404 /errors/404.html;
    error_page 500 /errors/500.html;

    # Max request body size
    client_max_body_size 10M;

    # Routes
    location / {
        root /var/www/html;
        index index.html;
        autoindex off;   # directory listing disabled
        methods GET POST;
    }

    location /kapouet {
        root /tmp/www;
        autoindex on;    # allow directory listing
        index index.html;
    }

    location /upload {
        root /var/www/uploads;
        methods POST;
        upload_store /var/uploads;
    }

    location /oldpage {
        return 301 /newpage;   # redirect
    }
}
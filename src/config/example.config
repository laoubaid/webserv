# Global config
worker_processes 2;

http {
    # Default server
    server {
        listen 80;
        server_name localhost;

        root /var/www/html;
        index index.html;

        location / {
            # Default page
            index index.html;
        }

        location /images/ {
            root /var/www/images;
        }

        location /api/ {
            proxy_pass http://127.0.0.1:3000;
        }
    }

    # Another server block (e.g. for a different domain or port)
    server {
        listen 8080;
        server_name test.local;

        root /var/www/testsite;
        index home.html;

        location / {
            index home.html;
        }
    }
}

# You could include other configs like this:
